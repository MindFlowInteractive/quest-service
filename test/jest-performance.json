{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../src",
  "testRegex": "\\.performance\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/../test/setup-performance.ts"],
  "moduleNameMapping": {
    "^src/(.*)$": "<rootDir>/$1"
  },
  "testTimeout": 60000,
  "maxWorkers": 1
}
