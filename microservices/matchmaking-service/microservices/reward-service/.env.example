# Environment Configuration Template

# Copy this file to .env and update values for your environment

# Service Configuration
SERVICE_NAME=reward-service
SERVICE_HOST=localhost
SERVICE_PORT=3006
SERVICE_PROTOCOL=http
SERVICE_VERSION=1.0.0
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=reward_service
DB_USER=postgres
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@localhost:6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:rabbitmq123@localhost:5672
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=rabbitmq123
RABBITMQ_VHOST=/

# Retry Configuration
RABBITMQ_MAX_RETRIES=3
RABBITMQ_INITIAL_DELAY=1000
RABBITMQ_MAX_DELAY=30000
RABBITMQ_BACKOFF_MULTIPLIER=2
RABBITMQ_JITTER=true

# Dead Letter Queue Configuration
RABBITMQ_DLQ_ENABLED=true
RABBITMQ_DLQ_EXCHANGE=dlq.exchange
RABBITMQ_DLQ_ROUTING_KEY=dlq.routing.key
RABBITMQ_DLQ_TTL=86400000

# Redis/BullMQ Configuration
REDIS_MAX_RETRIES=3
REDIS_INITIAL_DELAY=1000
REDIS_MAX_DELAY=30000
REDIS_BACKOFF_MULTIPLIER=2
REDIS_JITTER=true
REDIS_DLQ_ENABLED=true
REDIS_DLQ_EXCHANGE=dlq
REDIS_DLQ_ROUTING_KEY=dlq
REDIS_DLQ_TTL=86400000

# Stellar Blockchain Configuration
SOROBAN_RPC_URL=https://soroban-testnet.stellar.org
STELLAR_NETWORK_PASSPHRASE=Test SDF Network ; September 2015
STELLAR_SECRET_KEY=S...
STELLAR_PUBLIC_KEY=G...

# Smart Contract IDs
REWARD_CONTRACT_ID=CA...
NFT_CONTRACT_ID=CA...

# Horizon URLs
STELLAR_HORIZON_URL_TESTNET=https://horizon-testnet.stellar.org
STELLAR_HORIZON_URL_PUBLIC=https://horizon.stellar.org

# Monitoring and Logging
LOG_LEVEL=info
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Security
JWT_SECRET=your-jwt-secret-here
API_KEY=your-api-key-here