# Environment Configuration Template
# Copy this file to .env and update values for your environment

# Service Configuration
SERVICE_NAME=email-service
SERVICE_HOST=localhost
SERVICE_PORT=3006
SERVICE_PROTOCOL=http
SERVICE_VERSION=1.0.0
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=email_service
DB_USER=postgres
DB_PASSWORD=password

# Redis Configuration (for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@localhost:6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:rabbitmq123@localhost:5672
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=rabbitmq123
RABBITMQ_VHOST=/

# Email Provider Configuration
# Options: sendgrid, ses
EMAIL_PROVIDER=sendgrid

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@questservice.com
SENDGRID_FROM_NAME=Quest Service

# AWS SES Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
SES_FROM_EMAIL=noreply@questservice.com
SES_FROM_NAME=Quest Service

# Email Queue Configuration
EMAIL_QUEUE_MAX_RETRIES=5
EMAIL_QUEUE_INITIAL_DELAY=1000
EMAIL_QUEUE_MAX_DELAY=300000
EMAIL_QUEUE_BACKOFF_MULTIPLIER=2

# Bounce/Complaint Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_key

# Unsubscribe Configuration
UNSUBSCRIBE_BASE_URL=https://questservice.com/unsubscribe
UNSUBSCRIBE_TOKEN_EXPIRY=30d

# Rate Limiting
RATE_LIMIT_MAX_EMAILS_PER_MINUTE=100
RATE_LIMIT_MAX_EMAILS_PER_HOUR=1000

# Email Tracking
TRACKING_PIXEL_URL=https://questservice.com/track
TRACKING_ENABLED=true

# Dead Letter Queue Configuration
DLQ_ENABLED=true
DLQ_MAX_AGE=7d
